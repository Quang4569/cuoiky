

<!-- Main content container, centered vertically and horizontally -->
<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-4 col-lg-3">
    <div class="card shadow-sm rounded-3 border-0">
      <div class="card-body p-5">
        <h3 class="card-title text-center mb-4">Sign In</h3>

        <!-- Form starts here -->
        <%= form_with url: session_path, class: "needs-validation", novalidate: true do |form| %>
          <div class="mb-3">
            <%= form.email_field :email_address, class: "form-control form-control-lg", required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], aria: { label: "Email Address" } %>
          </div>

          <div class="mb-3">
            <%= form.password_field :password, class: "form-control form-control-lg", required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, aria: { label: "Password" } %>
          </div>

          <div class="d-grid">
            <%= form.submit "Sign In", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <!-- Forgot Password Link -->
        <div class="text-center mt-3">
          <%= link_to "Forgot password?", new_password_path, class: "btn btn-link text-decoration-none text-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Optional: Add a footer if necessary -->
<%= tag.div(class: "footer text-center text-muted mt-5") do %>
  <p>&copy; <%= Time.now.year %> Your Company Name</p>
<% end %>

